# OpenAI API Key (for demo/testing - users will provide their own in production)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub App Configuration
GITHUB_APP_ID=your_github_app_id_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Database URLs
DATABASE_URL=postgresql://prcopilot:password@localhost:5432/prcopilot
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# GitHub App Private Key (will be mounted as volume in Docker)
GITHUB_PRIVATE_KEY_PATH=./github_private_key.pem
